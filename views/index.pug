extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 #{heading}

      p.lead.text-light
        | #{portfolioDescription}
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      //- display each project's 1st image and details by looping through each
      each project in dataJson.projects
        .cell
          a(href='projects/' + project.id) Go to Project Page
            img.thumbnail(src=project.image_url[0])
            h5= project.project_name