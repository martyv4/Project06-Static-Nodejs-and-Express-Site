extends layout.pug     

block content 
  nav.grid-container.portfolio-breadcrumb   
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{name}

        p.lead.text-light
          | #{title}

        .portfolio-bio
          p
            | #{pitch}

  
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills

        ul
          li #{skill1}
          li #{skill2}
          li #{skill3}
          li #{skill4}
          li #{skill5} 
          li #{skill6}
        h6 Contact Info

        ul
          li #{phone}
          li #{email}

        a.button.expanded(href=linkedin_url target='_blank') Linkedin
        a.button.expanded(href=github_url target='_blank') GitHub
        a.button.expanded(href=twitter_url target='_blank') Twitter
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  